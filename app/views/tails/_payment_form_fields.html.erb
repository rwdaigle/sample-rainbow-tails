<div class="row-fluid">
  <div class="span8">
    <div class="row-fluid">
      <div class="span3">
        <%= f.label :full_name, "Name" %>
        <%= f.text_field :full_name, class: "span12" %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <%= f.label :number, "Card Number" %>
        <%= f.text_field :number, class: "span12" %>
      </div>

      <div class="span2">
        <%= f.label :verification_value, "CVV" %>
        <%= f.text_field :verification_value, class: "span12" %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <%= f.label :month, "Expiration" %>
        <%= f.text_field :month, placeholder: "Month", class: "span12" %>
      </div>
      <div class="span2">
        <%= f.label :year, "&nbsp;".html_safe %>
        <%= f.text_field :year, placeholder: "Year", class: "span12" %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span2">
        <%= label_tag "credit_card_how_many", "# of Tails" %>
        <%= text_field_tag "data[how_many]", @credit_card.how_many, :id => "credit_card_how_many", class: "span12" %>
      </div>
    </div>
  </div>
</div>
